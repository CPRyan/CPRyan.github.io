@article{ryan_circulating_2014,
	title = {Circulating breeding and pre-breeding prolactin and {LH} are not associated with clutch size in the zebra finch ({Taeniopygia} guttata)},
	volume = {202},
	copyright = {All rights reserved},
	issn = {00166480},
	url = {http://linkinghub.elsevier.com/retrieve/pii/S0016648014001361},
	doi = {10.1016/j.ygcen.2014.04.006},
	abstract = {Clutch size is a fundamental predictor of avian fitness, widely-studied from evolutionary and ecological perspectives, but surprisingly little is known about the physiological mechanisms regulating clutch size variation. The only formal mechanistic hypothesis for avian clutch-size determination predicts an anti- gonadal effect of circulating prolactin (PRL) via the inhibition of luteinizing hormone (LH), and has become widely-accepted despite little experimental support. Here we investigated the relationship between pre-breeding and breeding plasma PRL and LH and clutch-size in captive-breeding female zebra finches (Taeniopygia guttata). Using a repeated-measures design, we followed individual females from pre-breeding, through multiple breeding attempts, and attempted to decrease PRL using the D2-receptor agonist, bromocriptine. Clutch size was independent of variation in pre-breeding PRL or LH, although pre- breeding LH was negatively correlated with the time between pairing and the onset of laying. Clutch size was independent of variation in plasma PRL on all days of egg-laying. Bromocriptine treatment had no effect on plasma PRL, but in this breeding attempt clutch size was also independent of plasma PRL. Finally, we found no evidence for an inverse relationship between plasma PRL and LH levels, as predicted if PRL had inhibitory effects via LH. Thus, our data fail to provide any support for the involvement of cir- culating PRL in clutch size determination. These findings suggest that alternative models for hormonal control of avian clutch size need to be considered, perhaps involving downstream regulation of plasma PRL at the level of the ovary, or other hormones that have not been considered to date.},
	language = {en},
	urldate = {2015-01-26},
	journal = {General and Comparative Endocrinology},
	author = {Ryan, Calen P. and Dawson, Alistair and Sharp, Peter J. and Meddle, Simone L. and Williams, Tony D.},
	month = jun,
	year = {2014},
	pages = {26--34},
	file = {Ryan et al. - 2014 - Circulating breeding and pre-breeding prolactin an.pdf:/Users/dr.cpr/Zotero/storage/CUPB5A2M/Ryan et al. - 2014 - Circulating breeding and pre-breeding prolactin an.pdf:application/pdf;YGCEN11789.pdf:/Users/dr.cpr/Zotero/storage/FJWG4B84/YGCEN11789.pdf:application/pdf},
